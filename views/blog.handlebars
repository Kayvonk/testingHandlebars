<body>
	<ul>
		<h1>Posts</h1>
		{{#each posts}}
		<li>
			<p>ID: {{this.id}}</p>
			<p>Task: {{this.title}}</p>
		</li>
		{{/each}}
	</ul>
	<div class="container blog">
		<div class="row">
			<div class="col-md-2 col-sm-2">
				<a class="btn btn-light" href="/cms">New Post</a>
			</div>
			<div class="col-md-2 col-sm-2">
				<a class="btn btn-light" href="/authors">Manage Authors</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12 blog-container">
			</div>
		</div>
	</div>
	<!-- Custom Script -->
	<script src="js/blog.js" type="text/javascript"></script>

</body>